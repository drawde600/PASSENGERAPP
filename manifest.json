{
  "name": "Project Para Passenger",
  "short_name": "ParaPassenger",
  "start_url": "/passenger.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#317EFB",
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "permissions": [
    "geolocation",
    "background-sync"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}